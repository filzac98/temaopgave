---
import MainLayout from "../layouts/MainLayout.astro"
import Artists from "../components/Artists.astro";
import Hero from "../components/Hero.astro";

const data = await fetch("https://fetch-with-astro.netlify.app/api/artists", {
  method: "GET",
}).then(res => res.json());
---

<MainLayout title="Lineup" currentPage="/lineup">
  <Hero imageSrc="/images/hero2.jpg" showContent={false} />
  <!-- Add the artist-grid class here -->
  <section class="artist-grid">
    {
      data.map((artist) => {
        return <Artists data={artist} />;
      })
    }
  </section>
</MainLayout>