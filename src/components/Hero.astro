---
const { title, text, text2, imageSrc, showContent = true } = Astro.props
---
<section class="hero">
  <div class="hero-image-container">
    <img src={imageSrc} alt="Crowd at Karrusel festival" class="hero-image" />
  </div>

  {showContent && (
    <div class="hero-content">
      <h2>{title}</h2>
      <p>{text}</p>
      <p>{text2}</p>
      <a href="#" class="btn-buy-tickets">Buy Tickets</a>
    </div>
  )}
</section>