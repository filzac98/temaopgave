---
import "../styles/global.css";
---

<footer class="newsletter-footer">
    <div class="newsletter-section">
      <p class="newsletter-heading">Sign up for our newsletter, and be the first to receive exciting news about next year's Karrusel Festival - including artists, events, and much more!</p>
      <form class="newsletter-form">
        <label for="name">Your name</label>
        <input type="text" id="name" placeholder="Hans Hansen" />
  
        <label for="email">Your email</label>
        <input type="email" id="email" placeholder="...@mail.com" />
  
        <div class="checkbox-container">
          <input type="checkbox" id="policy-agreement" />
          <label for="policy-agreement">I agree to Karrusel Festivals personal data policy</label>
        </div>
  
        <button type="submit" class="signup-button">SIGN UP</button>
      </form>
    </div>
  
    <div class="footer-bottom">
      <div class="social-media">
        <a href="#" class="social-icon">
          <img src="/path/to/instagram-icon.svg" alt="Instagram" />
        </a>
        <a href="#" class="social-icon">
          <img src="/path/to/facebook-icon.svg" alt="Facebook" />
        </a>
      </div>
      <p class="address">Refshalevej 193, 1432 Copenhagen</p>
    </div>
  </footer>