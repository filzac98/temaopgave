---
const { imageSrc, title, description } = Astro.props;
---

<article class="card">
    <img src={imageSrc} alt={title} class="card-image" />
    <div class="card-content">
        <h2>{title}</h2>
        <p>{description}</p>
        <a href="#" class="btn-read-more">Read more</a>
    </div>
</article>

<style>
  .card {
    background-color: #333;
    border-radius: 8px;
    overflow: hidden;
    text-align: center;
    color: #ecd9b9;
    padding: 16px;
    transition: transform 0.3s ease;
  }

  .card:hover {
    transform: translateY(-10px);
  }

  .card-image {
    width: 100%;
    height: 200px;
    object-fit: cover;
    border-bottom: 4px solid #ecd9b9;
  }

  .card-content {
    padding: 16px;
  }

  .card h2 {
    font-family: "Lexend Mega", sans-serif;
    margin-bottom: 10px;
    font-size: 20px;
  }

  .card p {
    font-family: "Kantumruy Pro", sans-serif;
    margin-bottom: 10px;
  }

  .btn-read-more {
    background-color: #ecd9b9;
    color: #333;
    padding: 8px 16px;
    text-decoration: none;
    border-radius: 5px;
    font-size: 14px;
    transition: background-color 0.3s ease;
  }

  .btn-read-more:hover {
    background-color: #c38156;
  }
</style>